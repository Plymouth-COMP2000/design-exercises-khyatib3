<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidebarBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Enquiry_Sent_Activity">

    <Button
        android:id="@+id/goHomeBtn3"
        android:layout_width="141dp"
        android:layout_height="62dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#621111"
        android:fontFamily="@font/coustard"
        android:text="@string/backHomeTxt"
        app:layout_constraintEnd_toEndOf="@+id/successMsg3"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/successMsg3"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName2" />

    <TextView
        android:id="@+id/successMsg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="364dp"
        android:fontFamily="@font/coustard"
        android:text="@string/requestSent"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/restaurantName2"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/restaurantName2"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/restaurantName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/abril_fatface"
        android:foregroundTint="#2C399B"
        android:text="@string/restaurantName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#5D0A0A"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/restaurantLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>