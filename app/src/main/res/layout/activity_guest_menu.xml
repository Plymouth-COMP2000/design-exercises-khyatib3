<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/guest_menu_page"
    android:padding="8dp"
    tools:context=".Guest_Menu_Activity">

    <!-- home button and sidebar button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- home button -->
        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/backHomeTxt"
            android:src="@drawable/ic_home"/>

        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menuLbl"
            android:fontFamily="@font/abril_fatface"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/sidebarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sidebar"
            android:contentDescription="Sidebar"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <!-- search bar -->
    <SearchView
        android:id="@+id/menuSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search by keyword..."
        android:background="@drawable/rounded_input" />

    <!-- menu items data -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="394dp"
        android:layout_height="604dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>


