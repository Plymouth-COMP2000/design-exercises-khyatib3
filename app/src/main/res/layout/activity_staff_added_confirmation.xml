<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffAdd_SuccessScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff_Added_Confirmation">

    <ImageView
        android:id="@+id/restaurant_Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_logo" />

    <TextView
        android:id="@+id/restaurantName_AdminConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/restaurantName"
        android:textColor="@color/wine_red"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_Logo"
        app:layout_constraintStart_toStartOf="@+id/restaurant_Logo"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_Logo" />

    <TextView
        android:id="@+id/memberAddedMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/coustard"
        android:text="@string/staff_added_Message"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/restaurantName_AdminConfirm"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/restaurantName_AdminConfirm"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName_AdminConfirm" />

    <Button
        android:id="@+id/staff_adminSuccess_HomeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/coral"
        android:fontFamily="@font/coustard"
        android:text="@string/backHomeTxt"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/memberAddedMsg"
        app:layout_constraintStart_toStartOf="@+id/memberAddedMsg"
        app:layout_constraintTop_toBottomOf="@+id/memberAddedMsg"
        app:layout_constraintVertical_bias="0.03" />
</androidx.constraintlayout.widget.ConstraintLayout>