<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">

    <!-- logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_logo" />

    <!-- restaurant name -->
    <TextView
        android:id="@+id/restaurantName3"
        android:layout_width="374dp"
        android:layout_height="50dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/restaurantName"
        android:textAlignment="center"
        android:textColor="#5D0A0A"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <!-- username prompt -->
    <TextView
        android:id="@+id/usernamePrompt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:fontFamily="@font/coustard"
        android:text="@string/username_prompt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/restaurantName3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/restaurantName3"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName3" />

    <!-- username input field -->
    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:fontFamily="@font/coustard"
        android:hint="@string/enter_username"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/usernamePrompt2"
        app:layout_constraintStart_toStartOf="@+id/usernamePrompt2"
        app:layout_constraintTop_toBottomOf="@+id/usernamePrompt2" />

    <!-- password prompt -->
    <TextView
        android:id="@+id/passwordPrompt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/coustard"
        android:text="@string/password_prompt"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/usernameInput"
        app:layout_constraintStart_toStartOf="@+id/usernameInput"
        app:layout_constraintTop_toBottomOf="@+id/usernameInput" />

    <!-- password input field -->
    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_input"
        android:fontFamily="@font/coustard"
        android:hint="@string/enter_password"
        android:padding="10dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/usernameInput"
        app:layout_constraintStart_toStartOf="@+id/usernameInput"
        app:layout_constraintTop_toBottomOf="@+id/passwordPrompt2" />

    <!-- submit button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/coustard"
        android:paddingHorizontal="20dp"
        android:text="@string/submitLbl"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/passwordInput"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/passwordInput"
        app:layout_constraintTop_toBottomOf="@+id/passwordInput"
        app:layout_constraintVertical_bias="0.296" />

    <ImageView
        android:id="@+id/rectangleBorder"
        android:layout_width="380dp"
        android:layout_height="367dp"
        android:backgroundTint="@color/teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantName3"
        app:layout_constraintVertical_bias="0.466"
        app:srcCompat="@drawable/border_rectangle" />
</androidx.constraintlayout.widget.ConstraintLayout>