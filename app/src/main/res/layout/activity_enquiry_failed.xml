<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enquiry_failed_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookings.Enquiry_Failed_Activity">

    <TextView
        android:id="@+id/restaurant2000Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/restaurantName"
        android:textAlignment="center"
        android:textColor="@color/wine_red"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_Logo_EnquiryFail" />

    <ImageView
        android:id="@+id/restaurant_Logo_EnquiryFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_logo" />

    <ImageView
        android:id="@+id/oopsFace"
        android:layout_width="135dp"
        android:layout_height="143dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="@+id/restaurant2000Title"
        app:layout_constraintStart_toStartOf="@+id/restaurant2000Title"
        app:layout_constraintTop_toBottomOf="@+id/restaurant2000Title"
        app:srcCompat="@drawable/ic_oops" />

    <TextView
        android:id="@+id/reservationSentFailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/coustard"
        android:text="Oops! \n The app couldn't handle this request \n at the moment. \n Please try again!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/oopsFace"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/oopsFace"
        app:layout_constraintTop_toBottomOf="@+id/oopsFace" />

    <Button
        android:id="@+id/enquiryRetryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/error_red"
        android:fontFamily="@font/coustard"
        android:text="Try again"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/oopsFace"
        app:layout_constraintStart_toStartOf="@+id/oopsFace"
        app:layout_constraintTop_toBottomOf="@+id/reservationSentFailText" />

</androidx.constraintlayout.widget.ConstraintLayout>