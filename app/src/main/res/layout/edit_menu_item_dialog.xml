<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editDescriptionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Change description" />

    <EditText
        android:id="@+id/editPriceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add price"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/editImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Image" />

    <Button
        android:id="@+id/saveMenuChangeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes" />

    <Button
        android:id="@+id/cancelMenuChangesBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel" />
</LinearLayout>
