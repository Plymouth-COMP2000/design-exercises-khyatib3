<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/openRequests_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookings.Open_Requests">

    <TextView
        android:id="@+id/openReqsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Open Requests"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/openReqsToHomeBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/backHomeTxt"
        app:layout_constraintBottom_toBottomOf="@+id/openReqsTitle"
        app:layout_constraintEnd_toStartOf="@+id/openReqsTitle"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/openReqsTitle"
        app:srcCompat="@drawable/ic_home" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/openReqsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openReqsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>