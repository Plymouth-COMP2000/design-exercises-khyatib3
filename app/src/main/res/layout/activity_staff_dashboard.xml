<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/staffDashboardScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepages.StaffDashboard">

    <!--VIEW AND CHANGE MENU -->

    <!--View Reservations-->

    <!-- ADD STAFF MEMBER BTN-->

    <TextView
        android:id="@+id/restaurantNameDash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/restaurantName"
        android:textColor="#570000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewChangeMenuBtn"
        android:layout_width="253dp"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#800f2F"
        android:fontFamily="@font/coustard"
        android:text="@string/changeViewMenuLbl"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/restaurantNameDash"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/restaurantNameDash"
        app:layout_constraintTop_toBottomOf="@+id/restaurantNameDash" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewTblResBtn"
        android:layout_width="255dp"
        android:layout_height="126dp"
        android:backgroundTint="#800f2F"
        android:fontFamily="@font/coustard"
        android:text="@string/viewTblResLbl"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/restaurantNameDash"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/restaurantNameDash"
        app:layout_constraintTop_toBottomOf="@+id/viewChangeMenuBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addStaffBtn"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:backgroundTint="#800f2F"
        android:fontFamily="@font/coustard"
        android:text="@string/addStaffLbl"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/viewTblResBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewTblResBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewTblResBtn" />

    <!-- preferences BTN-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/staffPreferencesBtn"
        android:layout_width="255dp"
        android:layout_height="131dp"
        android:backgroundTint="#800f2F"
        android:fontFamily="@font/coustard"
        android:text="@string/preferencesOption"
        android:textSize="16sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/restaurantNameDash"
        app:layout_constraintStart_toStartOf="@+id/restaurantNameDash"
        app:layout_constraintTop_toBottomOf="@+id/addStaffBtn" />

    <!-- Logo-->
    <ImageView
        android:id="@+id/dashboardLogo"
        android:layout_width="156dp"
        android:layout_height="104dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/staffPreferencesBtn"
        app:layout_constraintStart_toStartOf="@+id/staffPreferencesBtn"
        app:srcCompat="@drawable/restaurant_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>